<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDetailImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/mulsih_bold"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDetailPrice"
            android:text="price"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание продукта"
            android:layout_marginHorizontal="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/mulsih_bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание продукта"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/mulish_semibold"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:text="1.0"
                />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                />

        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetailAddToCart"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_korzina"
            app:iconTint="@color/white_green"
            android:layout_marginHorizontal="20dp"
            android:padding="8dp"
            android:background="@drawable/bc_korzina"
            app:backgroundTint="@null"
            android:textColor="@color/white_green"
            android:textSize="18dp"
            android:fontFamily="@font/inter_classik"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Добавить в корзину"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_star"
        android:id="@+id/btnFavorite"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <!-- Уже есть: ivDetailImage, tvDetailName, tvDetailPrice, ... -->

        <Button
            android:id="@+id/btnShowReviewDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оставить отзыв"/>

            <LinearLayout
                android:id="@+id/layoutRatingContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <!-- Текст со средней оценкой -->
                <TextView
                    android:id="@+id/tvAvgRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Средняя оценка: 0.0"
                    android:layout_marginEnd="12dp" />

                <!-- Сам RatingBar для визуального отображения -->
                <RatingBar
                    android:id="@+id/ratingBarAvg"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:minHeight="20dp"
                    android:maxHeight="20dp"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/yellow"
                    android:progressBackgroundTint="@android:color/darker_gray"
                    android:secondaryProgressTint="@color/yellow"/>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
