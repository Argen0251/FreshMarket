<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:background="@drawable/bc_korzina"
    android:backgroundTint="@null"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivCartProductImage"
            android:layout_width="144dp"
            android:layout_height="92dp"
            android:src="@drawable/ic_tomato"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Изображение продукта" />

        <TextView
            android:id="@+id/tvCartProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/ivCartProductImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvCartProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: 0.0"
            app:layout_constraintTop_toBottomOf="@id/tvCartProductName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvCartProductName"
            app:layout_constraintTop_toBottomOf="@id/tvCartProductPrice"
            android:layout_marginTop="6dp"/>

        <!-- Кнопка Увеличить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncrease"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="+"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            app:layout_constraintStart_toEndOf="@id/tvQuantity"
            app:layout_constraintTop_toTopOf="@id/tvQuantity"
            android:layout_marginStart="8dp" />

        <!-- Кнопка Уменьшить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecrease"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="-"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/btnIncrease"
            app:layout_constraintTop_toTopOf="@id/btnIncrease"
            android:layout_marginStart="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemove"
            android:background="@drawable/bc_korzina"
            app:backgroundTint="@null"
            android:layout_width="50dp"
            app:icon="@drawable/ic_delet"
            app:iconTint="@color/white_green"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnDecrease"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
